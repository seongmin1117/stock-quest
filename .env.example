# Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=stockquest
DB_USERNAME=stockquest
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Configuration
JWT_SECRET=your_very_long_random_string_at_least_32_characters
JWT_EXPIRATION=86400000

# Yahoo Finance API (Optional - for real market data)
YAHOO_FINANCE_API_KEY=your_api_key_here
YAHOO_FINANCE_BASE_URL=https://query1.finance.yahoo.com

# Application Configuration
APP_PORT=8080
APP_ENV=development

# Frontend Environment Variables
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_MOCK_API=false

# WebSocket Configuration (Future implementation)
WS_PORT=8081
WS_ENABLED=false

# Monitoring (Optional)
MONITORING_ENABLED=false
GRAFANA_API_KEY=
PROMETHEUS_ENDPOINT=

# Email Service (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@stockquest.com

# OAuth2 (Future implementation)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
