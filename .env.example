# ===================================================================
# Environment Variables Template for StockQuest
# Copy this file to .env.local for development or set in production
# ===================================================================

# Database Configuration
MYSQL_ROOT_PASSWORD=your-secure-root-password-here
MYSQL_DATABASE=stockquest
MYSQL_USER=stockquest
MYSQL_PASSWORD=your-secure-database-password-here

# Spring Boot Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/stockquest?serverTimezone=UTC&characterEncoding=UTF-8
SPRING_DATASOURCE_USERNAME=stockquest
SPRING_DATASOURCE_PASSWORD=your-secure-database-password-here

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters-required
JWT_EXPIRATION=86400000

# Redis Configuration
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379

# Application Environment
ENVIRONMENT=development
SPRING_PROFILES_ACTIVE=dev

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
FRONTEND_URL=http://localhost:3000

# External API Configuration
YAHOO_FINANCE_BASE_URL=https://query1.finance.yahoo.com
YAHOO_FINANCE_TIMEOUT=5000

# Security Notice:
# - Generate strong passwords for database credentials
# - Use a secure 256-bit key for JWT_SECRET (min 32 characters)
# - Never commit .env.local or production .env files to version control
# - Consider using container secrets or secure key management in production
